cat > layers/meta-custom/recipes-core/waydroid-setup/files/waydroid-setup.service << 'EOF'
[Unit]
Description=Waydroid Setup Service
After=network-online.target
Wants=network-online.target
ConditionPathExists=!/var/lib/waydroid-installed

[Service]
Type=oneshot
ExecStart=/usr/bin/setup-waydroid
RemainAfterExit=yes
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
EOF